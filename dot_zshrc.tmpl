function clean_branches {
    git branch --format "%(refname:short)" | grep -v "master\|main\|production|\develop" | xargs git branch -D
    git remote prune origin
}

function g_new_branch {
    git stash
    gcm
    git pull
    if [[ $2 -eq "-f" ]]; then
        clear_branches
    fi
    git checkout -b $1
    git stash pop
}

function rename_kube_context() {
  if [[ -z "$1" ]]; then
    echo "Error: Please provide a new name for the context"
    echo "Usage: rename_kube_context <new_name>"
    return 1
  fi
  
  local current_context=$(kubectl config current-context)
  if [[ $? -ne 0 ]]; then
    echo "Error: Failed to get current kubectl context"
    return 1
  fi
  
  echo "Renaming context '$current_context' to '$1'..."
  kubecm rename "$current_context" "$1" -s
  
  if [[ $? -eq 0 ]]; then
    echo "Context successfully renamed to '$1'"
  fi
}

